                        {"type": "CheckBox", "name": "ActTempActivated", "caption": "Current temperature",  "width": "200px"},
                        {"type": "Select", "name": "ActTempIdent", "caption": "State:", "width": "250px",
                            "options": [
                                {"caption": "Baden-Württemberg", "value": "baw"},
                                {"caption": "Bayern", "value": "bay"},
                                {"caption": "Berlin, Brandenburg", "value": "bbb"},
                                {"caption": "Hessen", "value": "hes"},
                                {"caption": "Mecklenburg-Vorpommern", "value": "mvp"},
                                {"caption": "Niedersachsen, Bremen", "value": "nib"},
                                {"caption": "Nordrhein-Westfalen", "value": "nrw"},
                                {"caption": "Rheinland-Pfalz, Saarland", "value": "rps"},
                                {"caption": "Sachsen", "value": "sac"},
                                {"caption": "Sachsen-Anhalt", "value": "saa"},
                                {"caption": "Schleswig-Holstein, Hamburg", "value": "shh"},
                                {"caption": "Thüringen", "value": "thu"}
                            ]
                        },
                        {"type": "ValidationTextBox", "name": "ActTempStyle", "caption": "Inline Style [div]:", "width": "425px"}
                    ]
                },
                {"type": "RowLayout",
                    "items": [
                        {"type": "CheckBox", "name": "ImgRadarActivated", "caption": "Rainfall radar image",  "width": "200px"},
                        {"type": "Select", "name": "ImgRadarIdent", "caption": "State:", "width": "250px",
                            "options": [
                                {"caption": "Baden-Württemberg", "value": "baw"},
                                {"caption": "Bayern", "value": "bay"},
                                {"caption": "Berlin, Brandenburg", "value": "bbb"},
                                {"caption": "Hessen", "value": "hes"},
                                {"caption": "Mecklenburg-Vorpommern", "value": "mvp"},
                                {"caption": "Niedersachsen, Bremen", "value": "nib"},
