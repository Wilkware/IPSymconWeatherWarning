{
    "elements": [
        { 
            "type": "RowLayout",
            "items": [
                {
                "type": "Image",
                "image": "data:image/png;base64,"
                },
                {"type": "Label", "label": "\nWeather Warning\n "}
            ]
        },
        {"type": "Label", "label": "This module integrates the weather warnings and radar images provided by the German Weather Service (DWD) into IPS."},
        {
            "type": "ExpansionPanel",
            "caption": "Warning area ...",
            "items": [
                {"type": "Select", "name": "WarningCountry", "caption": "Country:",  "width": "450px",
                    "options": [
                        {"caption": "Deutschland", "value": "de"}
                    ]
                },
                {"type": "RowLayout",
                    "items": [
                        {"type": "Select", "name": "WarningType", "caption": "Area type:", "width": "450px", "onChange": "IPS_RequestAction($id,'OnWarningType',$WarningType);", 
                            "options": [
                                {"caption": "Landkreise", "value": "1"},
                                {"caption": "Binnenseen", "value": "2"},
                                {"caption": "Seegebiete", "value": "4"},
                                {"caption": "Küstengebiete", "value": "5"},
                                {"caption": "Gemeinden", "value": "8"},
                                {"caption": "Landkreise (Zfg.)", "value": "9"}
                            ]
                        },
                        {"type": "Select", "name": "WarningState", "caption": "State:", "width": "450px", "onChange": "IPS_RequestAction($id,'OnWarningState',serialize(['type'=>$WarningType,'state'=>$WarningState]));",
                            "options": [
                                {"caption": "Please select ...", "value": "null"}
                            ]
                        }
                    ]
                },
                {
                "type": "RowLayout",
                    "items": [
                        {"type": "Select", "name": "WarningCounty", "caption": "County:", "width": "450px", "onChange": "IPS_RequestAction($id,'OnWarningCounty',serialize(['type'=>$WarningType,'state'=>$WarningState,'county'=>$WarningCounty]));", "visible": false, 
                            "options": [
                                {"caption": "Please select ...", "value": "null"}
                            ] 
                        },
                        {"type": "Select", "name": "WarningCommunity", "caption": "Community:", "width": "450px", "visible": false, 
                            "options": [
                                {"caption": "Please select ...", "value": "null"}
                            ] 
                        }
                    ]
                }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Storm map ...",
            "items": [
                {"type": "RowLayout",
                    "items": [
                        {"type": "Select", "name": "MapSelected", "caption": "Selection:", "width": "450px", "onChange": "IPS_RequestAction($id,'OnWarningMap',$MapSelected);",
                            "options": [
                                {"caption": "No map", "value": "00"},
                                {"caption": "Deutschland", "value": "99"},
                                {"caption": "Baden-Württemberg", "value": "08"},
                                {"caption": "Bayern", "value": "09"},
                                {"caption": "Berlin", "value": "11"},
                                {"caption": "Berlin, Brandenburg", "value": "23"},
                                {"caption": "Brandenburg", "value": "12"},
                                {"caption": "Bremen", "value": "04"},
                                {"caption": "Hamburg", "value": "02"},
                                {"caption": "Hessen", "value": "06"},
                                {"caption": "Mecklenburg-Vorpommern", "value": "13"},
                                {"caption": "Niedersachsen", "value": "03"},
                                {"caption": "Niedersachsen, Bremen", "value": "34"},
                                {"caption": "Nordrhein-Westfalen", "value": "05"},
                                {"caption": "Rheinland-Pfalz", "value": "07"},
                                {"caption": "Rheinland-Pfalz, Saarland", "value": "17"},
                                {"caption": "Saarland", "value": "10"},
                                {"caption": "Sachsen", "value": "14"},
                                {"caption": "Sachsen-Anhalt", "value": "15"},
                                {"caption": "Schleswig-Holstein", "value": "01"},
                                {"caption": "Schleswig-Holstein, Hamburg", "value": "21"},
                                {"caption": "Thüringen", "value": "16"}
                            ]
                        },
                        {"type": "Label", "caption": "NOTE: Each new selection resets the following variables to default values!" }
                    ]
                },
                {"type": "RowLayout",
                    "items": [
                        {"type": "Select", "name": "MapArea", "caption": "Level of detail:", "width": "221px",
                            "options": [
                                {"caption": "Gemeinden", "value": "Warngebiete_Gemeinden"},
                                {"caption": "Kreise", "value": "Warngebiete_Kreise"}
                            ]
                        },
                        {"type": "Select", "name": "MapBackground", "caption": "Background:", "width": "221px",
                            "options": [
                                {"caption": "White", "value": "white"},
                                {"caption": "Transparent", "value": "transparent"},
                                {"caption": "Earth (bluemarble)", "value": "bluemarble"}
                            ]
                        },
                        {"type": "NumberSpinner", "name": "MapWidth", "caption": "Image width:", "suffix": "px", "width": "221px"},
                        {"type": "NumberSpinner", "name": "MapHeight", "caption": "Image height:", "suffix": "px", "width": "221px"}
                    ]
                },
                {"type": "Label", "caption": "Bounding box:"},
                {"type": "RowLayout",
                    "items": [
                        {"type": "NumberSpinner", "name": "MapWest", "caption": "West:", "digits": 6, "suffix": "°", "width": "221px"},
                        {"type": "NumberSpinner", "name": "MapSouth", "caption": "South:", "digits": 6, "suffix": "°", "width": "221px"},
                        {"type": "NumberSpinner", "name": "MapEast", "caption": "East:", "digits": 6, "suffix": "°", "width": "221px"},
                        {"type": "NumberSpinner", "name": "MapNorth", "caption": "Nord:", "digits": 6, "suffix": "°", "width": "221px"}
                    ]
                }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Pictures and radar film ...",
            "items": [
                {"type": "RowLayout",
                    "items": [
                        {"type": "CheckBox", "name": "ISOActTempActivated", "caption": "Current temperature",  "width": "200px"},
                        {"type": "Select", "name": "ISOActTempIdent", "caption": "Country:", "width": "250px",
                            "options": [
                                {"caption": "Deutschland", "value": "de"}
                            ]
                        },
                        {"type": "ValidationTextBox", "name": "ISOActTempStyle", "caption": "Inline Style [div]:", "width": "425px"}
                    ]
                },
                {"type": "RowLayout",
                    "items": [
                        {"type": "CheckBox", "name": "ISOImgRadarActivated", "caption": "Rainfall radar image",  "width": "200px"},
                        {"type": "Select", "name": "ISOImgRadarIdent", "caption": "Country:", "width": "250px",
                            "options": [
                                {"caption": "Deutschland", "value": "de"}
                            ]
                        },
                        {"type": "ValidationTextBox", "name": "ISOImgRadarStyle", "caption": "Inline Style [div]:", "width": "425px"}
                    ]
                },
                {"type": "RowLayout",
