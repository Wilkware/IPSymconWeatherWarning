                                {"caption": "Schleswig-Holstein, Hamburg", "value": "shh"},
                                {"caption": "Thüringen", "value": "thu"}
                            ]
                        },
                        {"type": "ValidationTextBox", "name": "ImgRadarStyle", "caption": "Inline Style [div]:", "width": "425px"}
                    ]
                },
                {"type": "RowLayout",
                    "items": [
                        {"type": "CheckBox", "name": "MovRadarActivated", "caption": "Rainfall radar film",  "width": "200px"},
                        {"type": "Select", "name": "MovRadarIdent", "caption": "State:", "width": "250px",
                            "options": [
                                {"caption": "Baden-Württemberg", "value": "baw"},
                                {"caption": "Bayern", "value": "bay"},
                                {"caption": "Berlin, Brandenburg", "value": "bbb"},
                                {"caption": "Hessen", "value": "hes"},
                                {"caption": "Mecklenburg-Vorpommern", "value": "mvp"},
                                {"caption": "Niedersachsen, Bremen", "value": "nib"},
                                {"caption": "Nordrhein-Westfalen", "value": "nrw"},
                                {"caption": "Rheinland-Pfalz, Saarland", "value": "rps"},
                                {"caption": "Sachsen", "value": "sac"},
                                {"caption": "Sachsen-Anhalt", "value": "saa"},
                                {"caption": "Schleswig-Holstein, Hamburg", "value": "shh"},
                                {"caption": "Thüringen", "value": "thu"}
                            ]
                        },
                        {"type": "ValidationTextBox", "name": "MovRadarStyle", "caption": "Inline Style [div]:", "width": "425px"}
                    ]
                }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Style sheets ...",
            "items": [
                {"type": "Label", "caption": "... for the representation of the warnings as HTML table the following styles can be set:" },
                {"type": "ValidationTextBox", "name": "table", "caption": "Table [table]:", "width": "100%", "multiline": true},
                {"type": "ValidationTextBox", "name": "tralt", "caption": "Alternate row [tr:nth-child(even)]:", "width": "100%", "multiline": true},
                {"type": "ValidationTextBox", "name": "tdimg", "caption": "Image cell [td.img]:", "width": "100%", "multiline": true},
                {"type": "ValidationTextBox", "name": "tdtxt", "caption": "Text cell [td.txt]:", "width": "100%", "multiline": true},
                {"type": "ValidationTextBox", "name": "title", "caption": "Message Title [div.hl]:", "width": "100%", "multiline": true},
                {"type": "ValidationTextBox", "name": "times", "caption": "Meaasge Timespan [div.ts]:", "width": "100%", "multiline": true},
                {"type": "ValidationTextBox", "name": "descr", "caption": "Meaasge Descrption [div.desc]:", "width": "100%", "multiline": true},
                {"type": "ValidationTextBox", "name": "lwarn", "caption": "Image Level [img.warn]:", "width": "100%", "multiline": true}
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Message management ...",
            "items": [
                {
                    "type": "RowLayout",
                    "items": [
                        {"type": "Select", "name": "DashboardMessage", "caption": "Send message to dashboard:", "width": "200px", 
                            "options": [
                                {"label": "No", "value": 0 },
                                {"label": "Yes", "value": 1 }
                            ]
                        },
                        {"type": "Select", "name": "DashboardLevel", "caption": "From warning message level:", "width": "250px", 
                            "options": [
                                {"label": "(1) Minor", "value": 1 },
                                {"label": "(2) Moderate", "value": 2 },
                                {"label": "(3) Severe", "value": 3 },
                                {"label": "(4) Extreme", "value": 4 }
                            ]
                        },
                        {"type": "Select", "name": "DashboardDuration", "caption": "Message life time:", "width": "425px", 
                            "options": [
                                {"label": "Always", "value": 0 },
                                {"label": "5 min", "value": 5 },
                                {"label": "15 min", "value": 15 },
                                {"label": "30 min", "value": 30 },
                                {"label": "45 min", "value": 45 },
                                {"label": "60 min", "value": 60 },
                                {"label": "2 h", "value": 120 }
                            ]
                        }
                    ]
                },
                {
                    "type": "RowLayout",
                    "items": [
                        {"type": "Select", "name": "NotificationMessage", "caption": "Send notification message:", "width": "200px", 
                            "options": [
                                {"label": "No", "value": 0 },
                                {"label": "Yes", "value": 1 }
                            ]
                        },
                        {"type": "Select", "name": "NotificationLevel", "caption": "From warning message level:", "width": "250px", 
                            "options": [
                                {"label": "(1) Minor", "value": 1 },
                                {"label": "(2) Moderate", "value": 2 },
                                {"label": "(3) Severe", "value": 3 },
                                {"label": "(4) Extreme", "value": 4 }
                            ]
                        }
                    ]
                },
                {
                    "type": "RowLayout",
                    "items": [
                        {"type": "Select", "name": "TextVariable", "caption": "Write text to variable:", "width": "200px",
                            "options": [
                                {"label": "No", "value": 0 },
                                {"label": "Yes", "value": 1 }
                            ]
                        },
                        {"type": "ValidationTextBox", "name": "TextSeparator", "caption": "Text separator / line break:", "width": "250px"}
                    ]
                },
                {
                    "type": "RowLayout",
                    "items": [
                        {"type": "ValidationTextBox", "name": "TextFormat", "caption": "Text message format:", "width": "450px"},
                        {"type": "Label", "caption": "Specifier: %L = Warning level (text), %L = Warning level (number),\n%T = Warning Type, %M = Message, %D = Description"}
                    ]
                },
                {"type": "Label", "caption": "... to send notification messages to a web front:" },
                {"type": "SelectInstance", "name": "InstanceWebfront", "caption": "WebFront Instance:", "width": "450px" },
                {"type": "Label", "caption": "... to use the dashboard message script. More information you get in the forum to thema: Meldungsanzeige im WebFront:" },
                {"type": "SelectScript", "name": "ScriptMessage", "caption": "Message script:", "width": "450px" }
             ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Advanced settings ...",
            "items": [
                {"type": "CheckBox", "name": "IndicatorVariable", "caption": "Create indicator variable for active warnings (highest level)!" },
                {"type": "NumberSpinner", "name": "UpdateInterval", "caption": "Update interval:", "suffix": "minutes", "minimum": 0, "maximum": 1440, "width": "200px"}
            ]
        }
    ],
    "actions": [
        {"type": "Label", "caption": "Weather warnings ..." },
        {"type": "Button","caption": "Update","onClick": "UWW_Update($id);"}
   ],
   "status": [
       {"code": 101, "icon": "inactive", "caption": "Creating instance."},
       {"code": 102, "icon": "active", "caption": "Instance active."},
       {"code": 104, "icon": "inactive", "caption": "Instance inactive."}
   ]}